<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/layoutmain1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#88d4f8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imghome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            app:srcCompat="@drawable/homebutton_boy" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutmain2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="#88d4f8">

        <ImageView
            android:id="@+id/imgavatar"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"

            app:srcCompat="@drawable/images" />

        <TextView
            android:id="@+id/textname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"

            android:text="TextView" />

        <ImageView
            android:id="@+id/imglevel"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"

            app:srcCompat="@drawable/user_level" />

        <TextView
            android:id="@+id/textlevel"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"

            android:text="TextView" />

        <ImageView
            android:id="@+id/imgcoin"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"

            app:srcCompat="@drawable/coin" />

        <TextView
            android:id="@+id/textcoin"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="0dp"

            android:text="TextView" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutmain3"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:background="#88d4f8"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="vertical">

            </LinearLayout>

            <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:columnCount="7"
                app:rowCount="1">

                <TextView
                    android:id="@+id/w1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周一"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w2"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周二"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周三"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w4"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周四"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周五"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w6"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周六"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />

                <TextView
                    android:id="@+id/w7"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="周日"
                    android:textAlignment="center"
                    android:textColor="#40b6dd"
                    app:layout_columnWeight="1" />
            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imglogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_boy" />
        </LinearLayout>

    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="299dp"
        android:layout_margin="10dp"
        android:layout_gravity="fill"
        app:columnCount="7"
        app:rowCount="3">

        <LinearLayout
            android:id="@+id/day1"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day2"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award4" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day3"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day4"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award7" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day5"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day6"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day7"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#4ee2b7"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day8"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day9"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:text="9" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day10"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day11"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day12"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award3" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day13"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day14"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#66d3f9"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day15"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day16"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day17"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day18"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/award8" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/day19"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day20"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/day21"
            android:layout_width="57dp"
            android:layout_height="98dp"
            android:background="#40b6dd"
            android:orientation="vertical"></LinearLayout>



    </android.support.v7.widget.GridLayout>

    <FrameLayout
        android:id="@+id/layoutmain4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88d4f8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imggoal"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/goal_boy"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bubble"
                android:textAlignment="center"
                android:gravity="center"
                android:text="我要在10天内获得10个星星"/>
        </LinearLayout>


    </FrameLayout>

</LinearLayout>